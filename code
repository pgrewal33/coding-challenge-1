name = input("what is your name? ")
name = name.title()
print ("Hello,", name )

score1 = float(input("what is your mini project 1 score? "))
score2 = float(input("what is your mini project 2 score? "))

weighted_average = (score1 * 0.4) + (score2 * 0.6)

finalscore = round(weighted_average)

def get_grade(finalscore): 
    if finalscore >= 70:
        return "first class"
    elif finalscore >=60:
        return "upper second"
    elif finalscore >= 50:
        return "lower second"
    elif finalscore >= 40:
        return "third"
    else:
        return "fail"
    
grade = get_grade(finalscore)

print(name | finalscore | grade)    